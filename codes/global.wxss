/* pages/test/test.wxss */
page{
	height: 100%;
}
.my-top-fixed{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	z-index: 9;
}
.my-top{
	height: 46px;
	line-height: 46px;
	font-size: 40rpx;
	color: white;
	text-align: center;
	box-sizing:border-box;
	border-bottom:1rpx solid #D7D6DC
}
.my-top-style{
	background: dodgerblue;
	border: none;
	box-shadow: 0 2px 2px gray;
}

.weui-search-bar__cancel-btn, .weui-cell__bd{
	color: dodgerblue;
}
.my-btn-more{
	margin-right:10px;
	line-height: 28px;
}
.my-btn-more image{
	display: inline-block;
	height: 28px;
	width: 28px;
	vertical-align: middle;
}
.my-noscroll{
	display:block;
	margin-top: 50px;
	padding: 8px 0 8px 0;
}
.my-scroll{
	position: absolute;
	top: 50px;
	left: 0;
	bottom: 0;
	padding: 8px 0 8px 0;
}
.my-panel-title{
	color: black;
}
.my-panel-flex{
	display: -webkit-flex;
	align-items: center;
}
.my-panel-flex-item3{
	flex: 3 0 60%;
}
.my-panel-flex-item1{
	flex: 1 0 auto;
}
.my-panel-tag{
    display: inline-block;
    border: 1rpx dodgerblue solid;
    border-radius: 8rpx;
    margin: 8rpx;
    padding: 8rpx;
		text-overflow:ellipsis;
}
.my-panel-cell{
		color: dodgerblue;
		font-size: 32rpx;
}

.my-text-left{
	text-align: left;
	display: inline-block;
}
.my-text-right{
	float: right;
	display: inline-block;
}
.my-bottom{
	position: absolute;
	bottom: 0;
	left: 0;
	right: 0;
	top: auto;
	height: 48px;
}
